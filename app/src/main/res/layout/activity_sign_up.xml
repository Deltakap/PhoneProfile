<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.student.phoneprofile.SignUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernamereg"
        android:hint="Username (4-20 characters)"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordreg"
        android:layout_marginTop="30dp"
        android:hint="Password (8-20 characters)"
        android:layout_below="@+id/usernamereg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/usernamereg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmpass"
        android:layout_marginTop="35dp"
        android:hint="Confirm Password"
        android:layout_below="@+id/passwordreg"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/passwordreg" />

    <Button
        android:layout_width="98dp"
        android:layout_height="40dp"
        android:text="Sign Up"
        android:id="@+id/signupsen"
        android:layout_below="@+id/confirmpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:onClick="Register"
        android:nestedScrollingEnabled="false"
        android:background="#00C853"
        android:textColor="#eeeeee" />
</RelativeLayout>
